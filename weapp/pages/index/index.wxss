.container {
  padding: 40rpx;
}

/* Hero 区域 */
.hero {
  text-align: center;
  padding: 60rpx 0;
}

.hero-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

/* 功能卡片 */
.feature-card {
  display: flex;
  align-items: center;
  padding: 40rpx;
  margin-bottom: 24rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.feature-card:active {
  opacity: 0.8;
}

.feature-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #6b7280;
}

.arrow {
  font-size: 48rpx;
  color: #d1d5db;
}

/* 信息卡片 */
.info-card {
  padding: 40rpx;
  background: white;
  border-radius: 24rpx;
  margin-top: 24rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-num {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: white;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 20rpx;
}

.info-text {
  font-size: 28rpx;
  color: #4b5563;
}

/* 测试邀请码 */
.test-codes {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  text-align: center;
}

.test-label {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  display: block;
}

.code-list {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.code-tag {
  padding: 12rpx 24rpx;
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: 500;
}

.code-tag:active {
  background: #fff5f0;
  border-color: #ff6b35;
}
