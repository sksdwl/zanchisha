.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

/* 邀请区域 */
.invite-section {
  text-align: center;
  padding: 80rpx 0;
}

.invite-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.invite-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.invite-desc {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 60rpx;
}

/* 输入框 */
.code-input-wrapper {
  margin-bottom: 40rpx;
}

.code-input {
  width: 100%;
  height: 120rpx;
  text-align: center;
  font-size: 56rpx;
  font-weight: bold;
  letter-spacing: 20rpx;
  background: white;
  border: 4rpx solid #e5e7eb;
  border-radius: 24rpx;
  box-sizing: border-box;
}

.code-input:focus {
  border-color: #ff6b35;
}

/* 错误提示 */
.error-msg {
  color: #ef4444;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

/* 按钮 */
.btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  border: none;
}

.btn-disabled {
  opacity: 0.5;
}

/* 测试邀请码 */
.test-section {
  margin-top: 80rpx;
}

.test-title {
  font-size: 26rpx;
  color: #9ca3af;
  margin-bottom: 20rpx;
  display: block;
}

.test-codes {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.test-code {
  padding: 16rpx 32rpx;
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #ff6b35;
}

.test-code:active {
  background: #fff5f0;
  border-color: #ff6b35;
}

/* 房间头部 */
.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 30rpx 40rpx;
  margin: -40rpx -40rpx 40rpx -40rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.room-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.room-code {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

.room-action {
  font-size: 28rpx;
  color: #ff6b35;
}

/* 资料卡片 */
.profile-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
}

.profile-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.profile-desc {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 40rpx;
}

/* 表单 */
.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

/* 菜系标签 */
.cuisine-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.cuisine-tag {
  padding: 16rpx 32rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #6b7280;
  transition: all 0.3s;
}

.cuisine-tag.selected {
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: white;
}

/* 口味滑块 */
.taste-slider {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.slider-label {
  font-size: 24rpx;
  color: #9ca3af;
}

taste-slider slider {
  flex: 1;
}
