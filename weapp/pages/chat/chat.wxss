.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #1a1a2e;
}

/* 聊天头部 */
.chat-header {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.room-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.participant-count {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.system-msg {
  text-align: center;
  margin-bottom: 30rpx;
}

.system-text {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  border-radius: 24rpx;
}

/* 消息 */
.message {
  display: flex;
  margin-bottom: 30rpx;
  animation: fadeIn 0.4s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.message-other {
  flex-direction: row;
}

.message-self {
  flex-direction: row-reverse;
}

/* 头像 */
.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.avatar-name {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  max-width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 消息内容 */
.message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-right: 80rpx;
}

.message-self .message-content {
  align-items: flex-end;
  margin-left: 80rpx;
  margin-right: 20rpx;
}

.message-bubble {
  background: white;
  padding: 24rpx;
  border-radius: 20rpx;
  max-width: 80%;
}

.message-other .message-bubble {
  border-bottom-left-radius: 4rpx;
}

.message-self .message-bubble {
  background: #95ec69;
  border-bottom-right-radius: 4rpx;
}

.message-text {
  font-size: 30rpx;
  color: #1f2937;
  line-height: 1.5;
}

/* 消息标签 */
.message-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  margin-top: 12rpx;
}

/* 正在输入 */
.typing {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
}

.typing-dot {
  width: 16rpx;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 50%;
  margin-right: 12rpx;
  animation: typing 1.4s infinite;
}

.typing-dot:nth-child(2) { animation-delay: 0.2s; }
.typing-dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes typing {
  0%, 60%, 100% { transform: translateY(0); }
  30% { transform: translateY(-10rpx); }
}

/* 推荐结果卡片 */
.result-card {
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx;
  margin: 0 -30rpx -30rpx -30rpx;
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.result-icon {
  font-size: 40rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

/* 餐厅信息 */
.restaurant-info {
  background: #f9fafb;
  border-radius: 24rpx;
  padding: 30rpx;
}

.restaurant-header {
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.restaurant-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  display: block;
  margin-bottom: 12rpx;
}

.restaurant-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.cuisine-tag {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: white;
  font-size: 22rpx;
  border-radius: 8rpx;
}

.rating {
  font-size: 26rpx;
  color: #f59e0b;
}

.cost {
  font-size: 26rpx;
  color: #6b7280;
}

/* 信息行 */
.info-row {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.info-icon {
  font-size: 32rpx;
}

.info-text {
  flex: 1;
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.5;
}

/* 推荐菜品 */
.dishes-section {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #e5e7eb;
}

.dishes-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
  display: block;
}

.dishes-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.dish-tag {
  padding: 12rpx 24rpx;
  background: #fff5f0;
  color: #ff6b35;
  font-size: 26rpx;
  border-radius: 12rpx;
}

/* 导航按钮 */
.nav-btn {
  width: 100%;
  height: 88rpx;
  margin-top: 30rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.nav-btn:active {
  opacity: 0.9;
}

/* 结果底部 */
.result-footer {
  text-align: center;
  margin-top: 24rpx;
  font-size: 22rpx;
  color: #9ca3af;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}
